generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Order {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  fromCity         String
  toCity           String
  tariff           String
  passengers       Int
  priceEstimate    Float?
  customerName     String
  customerPhone    String
  comments         String?
  status           String   @default("NEW") // NEW, DISPATCHED, TAKEN, COMPLETED, CANCELLED
  sourceSite       String   @default("grand-transfer.com")
  driverId         String? // ID of the driver who took the order
  dispatcherId     String? // ID of the dispatcher who released the order
  scheduledDate    String?  // Date/time of the trip from booking form
  takenAt          DateTime?
  completedAt      DateTime?
  cancelledAt      DateTime?
  cancelReason     String?
  cancelledBy      String?  // telegramId of who cancelled
  driverNotified   Boolean  @default(false)
  clientNotified   Boolean  @default(false)
  feedbackReceived Boolean  @default(false)
  driver           Driver?  @relation("DriverOrders", fields: [driverId], references: [id])
  dispatcher       Driver?  @relation("DispatcherOrders", fields: [dispatcherId], references: [id])
}

model Driver {
  id                 String    @id @default(cuid())
  telegramId         BigInt    @unique
  username           String?
  firstName          String?
  phone              String?
  ptsNumber          String?
  licensePhotoId     String?
  stsPhotoId         String?
  carPhotoId         String?
  fullFio            String?
  status             String    @default("PENDING") // PENDING, APPROVED, BANNED
  role               String    @default("DRIVER") // USER, DRIVER, DISPATCHER, ADMIN
  // Future subscription
  subExpiresAt       DateTime?
  createdAt          DateTime  @default(now())
  ordersAsDriver     Order[]   @relation("DriverOrders")
  ordersAsDispatcher Order[]   @relation("DispatcherOrders")
}

model BroadcastMessage {
  id         Int      @id @default(autoincrement())
  orderId    Int
  telegramId BigInt
  messageId  Int
  createdAt  DateTime @default(now())

  @@index([orderId])
}

model BotSettings {
  id             Int     @id @default(1)
  protectContent Boolean @default(true)
}

model SupportTicket {
  id         Int       @id @default(autoincrement())
  ticketNum  String    @unique
  authorId   String
  authorName String
  adminId    String?
  message    String
  type       String    @default("SUPPORT") // SUPPORT, BUG
  status     String    @default("OPEN") // OPEN, IN_PROGRESS, CLOSED
  createdAt  DateTime  @default(now())
  closedAt   DateTime?
}

model TicketMessage {
  id         Int      @id @default(autoincrement())
  ticketNum  String
  senderId   String
  senderName String
  message    String
  createdAt  DateTime @default(now())

  @@index([ticketNum])
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  action     String   // BAN, UNBAN, ROLE_CHANGE, DELETE_USER, CANCEL_ORDER, APPROVE, REJECT
  actorId    String   // telegramId of who performed the action
  actorName  String
  targetId   String?  // telegramId or orderId of the target
  targetName String?
  details    String?  // Additional info (reason, old role -> new role, etc.)
  createdAt  DateTime @default(now())

  @@index([action])
  @@index([actorId])
}
